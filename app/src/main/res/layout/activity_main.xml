<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true"
        android:rowCount="4"
        android:columnCount="2">

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="phraseClickListener"
            android:tag="hellowGerman"
            android:text="Hellow"
            android:textAllCaps="false" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="phraseClickListener"
            android:tag="hiGerman"
            android:text="Hi"
            android:textAllCaps="false" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="phraseClickListener"
            android:tag="byeGerman"
            android:text="Bye"
            android:textAllCaps="false" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="phraseClickListener"
            android:tag="yesGerman"
            android:text="Yes"
            android:textAllCaps="false" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="phraseClickListener"
            android:tag="noGerman"
            android:text="No"
            android:textAllCaps="false" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="phraseClickListener"
            android:tag="welcomeGerman"
            android:text="Welcome"
            android:textAllCaps="false" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="phraseClickListener"
            android:tag="androidGerman"
            android:text="Android"
            android:textAllCaps="false" />

        <Button
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="phraseClickListener"
            android:tag="javaGerman"
            android:text="Java"
            android:textAllCaps="false" />







    </GridLayout>
</LinearLayout>